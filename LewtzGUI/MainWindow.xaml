<Window x:Class="LewtzGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LewtzGUI"
        mc:Ignorable="d"
        xmlns:vw="clr-namespace:LewtzGUI.Views"
        Title="MainWindow" Height="350" Width="725" SizeToContent="Manual">
    <Window.Resources>
        <DataTemplate xmlns:t="clr-namespace:LewtzGUI.ViewModel" 
            DataType="{x:Type t:MainWindowViewModel}">
            <vw:MainWindowView/>
            </DataTemplate>
    </Window.Resources>
    
    <StackPanel>
        <Menu>
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" 
                    Command="{Binding Path=CloseCommand}" />
            </MenuItem>
            <MenuItem Header="_Edit" />
            <MenuItem Header="_Options" />
            <MenuItem Header="_Help" />
        </Menu>
        <ContentControl Content="{Binding}"/>
    </StackPanel>
</Window>
    
